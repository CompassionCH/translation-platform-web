<LetterViewer letterId="props.letterId">
  <div class="w-full h-full relative">
    <Transition t-slot-scope="scope" active="state.letter !== undefined">
      <div t-att-class="scope.itemClass">
        <LetterInformationHeader letter="state.letter" />
      </div>
    </Transition>
    <Transition t-slot-scope="scope" active="state.loading">
      <div class="absolute bg-white flex justify-center items-center flex-col top-0 left-0 w-full h-full" t-att-class="scope.itemClass">
        <Loader class="'text-4xl'" />
        <p class="mt-3 text-slate-600 font-medium text-2xl">Loading Letter</p>
      </div>
    </Transition>
  </div>
</LetterViewer>