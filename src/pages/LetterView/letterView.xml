<LetterViewer letterId="props.letterId">
  <div class="w-full h-full relative">
    <div t-if="state.letter" class="h-full flex flex-col">
      <LetterInformationHeader letter="state.letter" />
      <div class="bg-slate-100 px-4 py-3 border-b border-solid border-slate-300 flex justify-between items-center">
        <p class="text-sm text-slate-600">
          <t t-if="state.letter.lastUpdate">
            Last updated the <span t-esc="state.letter.lastUpdate.toLocaleDateString()" />
          </t>
          <span t-else="">Never Modified</span>
        </p>
        <div class="flex gap-3">
          <Button color="'red'" level="'secondary'" size="'sm'">Delete Letter</Button>
          <Button color="'yellow'" level="'secondary'" size="'sm'">Put Back to Translate</Button>
          <RouterLink to="'/letter-edit/' + state.letter.id">
            <Button color="'compassion'" size="'sm'">Open in Editor</Button>
          </RouterLink>
        </div>
      </div>
      <div class="flex-1 bg-gradient-to-b from-slate-200 to-sky-50 p-4 overflow-auto">
        <!-- Display the various translation elements in readonly mode -->
        <div t-foreach="state.letter.translatedElements" t-as="element" t-key="element.id" class="mb-6">
          <div t-if="element.type == 'pageBreak'" class="relative w-full flex items-center justify-center">
            <div class="absolute w-full border-b border-dashed border-slate-400"></div>
            <div class=" border border-dashed border-slate-400 relative bg-slate-200 text-xs text-slate-600 px-2 py-1 rounded-sm">Page Break</div>
          </div>
          <div t-if="element.type == 'paragraph'" class="p-4 bg-white rounded-sm shadow-xl relative z-10">
            <div class="grid grid-cols-6 gap-4">
              <div class="col-span-4">
                <h4 class="text-lg font-light text-slate-800">Translated Box</h4>
                <p class="text-xs text-slate-700" t-esc="element.content" />
              </div>
              <div class="col-span-2">
                <div class="flex">
                  <h4 class="text-lg font-light text-slate-800">Comment</h4>
                  <button class="text-blue-500 hover:text-compassion transition-colors cursor-pointer text-xs ml-2 relative top-0.5">Answer this comment</button>
                </div>
                <p class="text-xs text-slate-700" t-esc="element.comments" />
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <Transition t-slot-scope="scope" active="state.loading">
      <div class="absolute bg-white flex justify-center items-center flex-col top-0 left-0 w-full h-full" t-att-class="scope.itemClass">
        <Loader class="'text-4xl'" />
        <p class="mt-3 text-slate-600 font-medium text-2xl">Loading Letter</p>
      </div>
    </Transition>
  </div>
</LetterViewer>