<LetterViewer letterId="props.letterId">
  <div class="w-full h-full relative">
    <div t-if="state.letter" class="h-full flex flex-col">
      <CommentReplyModal t-if="state.showReplyModal" letter="state.letter" show="state.showReplyModal" elementId="state.replyCommentId" onClose="() => this.state.showReplyModal = false" />
      <LetterInformationHeader letter="state.letter" />
      <div class="bg-slate-100 px-4 py-3 border-b border-solid border-slate-300 flex justify-between shadow-sm items-center z-30 relative">
        <p class="text-sm text-slate-600">
          <t t-if="state.letter.lastUpdate">
            Last updated the <span t-esc="state.letter.lastUpdate.toLocaleDateString()" />
          </t>
          <span t-else="">Never Modified</span>
        </p>
        <div class="flex gap-3">
          <Button color="'red'" level="'secondary'" size="'sm'">Delete Letter</Button>
          <Button color="'yellow'" level="'secondary'" size="'sm'">Put Back to Translate</Button>
          <RouterLink to="'/letter-edit/' + state.letter.id">
            <Button color="'compassion'" size="'sm'">Open in Editor</Button>
          </RouterLink>
        </div>
      </div>
      <div class="flex-1 overflow-auto relative bg-slate-200">
        <div class="absolute top-0 w-full h-4 bg-gradient-to-b from-slate-300 to-transparent z-20" />
        <div class="py-4 overflow-auto h-full">
          <!-- Display the various translation elements in readonly mode -->
          <div t-foreach="state.letter.translatedElements" t-as="element" t-key="element.id">
            <div t-if="element.type == 'pageBreak'" class="relative w-full flex items-center justify-center px-4">
              <div class="bg-slash p-4 w-full flex justify-center">
                <span class="text-slate-400 font-medium text-xs">Page Break</span>
              </div>
            </div>
            <div t-if="element.type == 'paragraph'" class="bg-white shadow-xl relative z-10 mx-4" t-att-class="{
              'border-b border-dashed border-slate-300': !element_last and state.letter.translatedElements[element_index + 1].type !== 'pageBreak'
            }">
              <div class="grid grid-cols-6 gap-4">
                <div class="col-span-4 py-4 pl-4">
                  <h4 class="font-medium text-slate-700">Translated Box</h4>
                  <p class="text-xs text-slate-700" t-esc="element.content" />
                </div>
                <div class="col-span-2 bg-slate-50 p-4">
                  <div class="flex">
                    <h4 class="font-medium text-slate-700">Comment</h4>
                    <button class="text-blue-500 hover:text-compassion transition-colors cursor-pointer text-xs ml-2" t-on-click="() => { state.replyCommentId = element.id; state.showReplyModal = true; }">Reply</button>
                  </div>
                  <p class="text-xs text-slate-700" t-esc="element.comments" />
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <Transition t-slot-scope="scope" active="state.loading">
      <div class="absolute bg-white flex justify-center items-center flex-col top-0 left-0 w-full h-full" t-att-class="scope.itemClass">
        <Loader class="'text-4xl'" />
        <p class="mt-3 text-slate-600 font-medium text-2xl">Loading Letter</p>
      </div>
    </Transition>
  </div>
</LetterViewer>