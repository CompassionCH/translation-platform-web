<UserModal userId="state.usernameModal" onClose="() => this.state.usernameModal = undefined" />

<div>
  <div class="container mx-auto">
    <div class="py-10">
      <h3 class="text-slate-600 font-semibold text-2xl">Compassion</h3>
      <h1 class="text-slate-700 font-semibold text-4xl">Letters</h1>
    </div>
    <div class="bg-white rounded-xl shadow-md flex-1 overflow-hidden">
      <Table total="state.total"
          key="'letters-page-table'"
          columns="state.columns"
          data="state.letters"
          keyCol="'id'"
          onFilterChange="(params) => this.updateData(params)"
          loading="state.loading" />
    </div>
  </div>
</div>