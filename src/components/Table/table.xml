<div class="relative p-10">
  <div class="overflow-hidden">
    <table t-att-class="props.class" class="w-full">
      <thead>
        <tr>
          <td t-foreach="state.columns" t-as="col" t-key="col.name"
            t-esc="col.header || col.name"
            class="font-medium text-slate-800 py-1 px-2" />
        </tr>
      </thead>
      <tbody>
        <t t-foreach="props.data" t-as="row" t-key="row.username">
          <Row columns="state.columns" data="row" />
        </t>
      </tbody>
    </table>
  </div>
  <div class="flex justify-between items-center mt-5">
    <div>
      Showing 
      <t t-esc="(state.page * props.data.length) + 1" /> - <t t-esc="(state.page + 1) * props.data.length" />
      of <t t-esc="props.total" /> Results
    </div>
    <div>
      <PageSelector page="state.page" total="props.total" pageSize="state.pageSize" onPageChange="(page) => this.moveToPage(page)" />
    </div>
  </div>
  <Transition duration="100"
    active="props.loading"
    enterFrom="'opacity-0'"
    enterTo="'opacity-1'"
    leaveFrom="'opacity-1'"
    leaveTo="'opacity-0'"
    enterActive="'transition-all duration-100'"
    leaveActive="'transition-all duration-100'"
    t-slot-scope="scope"
  >
    <div class="absolute top-0 left-0 w-full h-full bg-white-70 backdrop-filter backdrop-blur flex justify-center items-center" t-att-class="scope.itemClass">
      <Loader class="'text-3xl'">
        <span class="text-slate-700 font-medium pt-2">Loading Data</span>
      </Loader>
    </div>
  </Transition>
</div>